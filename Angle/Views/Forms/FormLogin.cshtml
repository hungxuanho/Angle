<div class="styret-block-center s-content-center" style="width:400px !important">
    @{
        if (ViewBag.Error != null)
        {
            <div class="s-box alert alert-danger" role="alert">
                <strong>@ViewBag.Error</strong>
            </div>
        }
    }
    <form method="post" action="~/Forms/FormLogin" data-parsley-validate="" novalidate="">
        <!-- START panel-->
        <div class="panel panel-default s-box">
            <div class="panel-heading">
                <div class="panel-title">Login - Styret.com</div>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    Test data. Riktig login: email=a, pw=a
                </div>
                <div class="form-group">
                    <input type="text" name="email" required="required" class="form-control" placeholder="Epost" />
                </div>
                <div class="form-group">
                    <input type="password" name="password" required="required" class="form-control" placeholder="Passord" />
                </div>
            </div>
            <div>
                <a class="" href="#">
                    Glemt passord?
                </a>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-primary">Logg inn</button>
                <button type="button" class="btn btn-primary">Avbryt</button>
            </div>
        </div>
        <!-- END panel-->
    </form>
</div>


